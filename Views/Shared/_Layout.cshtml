<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        var API_LINK = "http://localhost/api/";
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kviz znanja", "Index", "Kviz", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@if (KvizZnanja.Models.Authentication.IsAdmin()) { @Html.ActionLink("Korisnici",  "Index", "Users", new { }, null) }</li>
                    <li>@Html.ActionLink("Pitanja",    "Index", "Pitanje", new { }, null)</li>
                    <li>@Html.ActionLink("Kvizovi",    "Index", "Kviz", new { }, null)</li>
                    <li>@Html.ActionLink("Rezultati",  "Index", "Rezultati", new { }, null)</li>
                </ul>

                <ul class="nav navbar-nav pull-right">
                    @if (KvizZnanja.Models.Authentication.IsLogged())
                    {
                        <li style="margin-left: 20px">
                            <a href="#"><i class="glyphicon glyphicon-user"></i>&nbsp;&nbsp;@KvizZnanja.Models.Authentication.GetImeIPrezime()</a>
                        </li>
                        <li>
                            <a href="/Logout">Logout&nbsp;&nbsp;<i class="glyphicon glyphicon-log-out"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height: 1075px;">
            @RenderBody()
            <hr />
        <footer class="text-center navbar navbar-fixed-bottom" style="font-size: 18px;padding-top: 9px;background-color: #F5F5F5;">
            <p style="font-weight: bold;color: black;">&copy; @DateTime.Now.Year - Kviz znanja</p>
            <ul class="list-inline">
                <li><span class="fa fa-2x fa-facebook-square"></span></li>
                <li><span class="fa fa-2x fa-youtube-square"></span></li>
                <li><span class="fa fa-2x fa-twitter"></span></li>
                <li><span class="fa fa-2x fa-google-plus"></span></li>
                <li><span class="fa fa-2x fa-linkedin-square"></span></li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
