
@{
    ViewBag.Title = "Index";
}

<h2>Pregled kvizova</h2>
<hr />

@if(ViewBag.kvizovi.Count > 0)
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th>Naziv</th>
                <th>Razina</th>
                @if (KvizZnanja.Models.Authentication.IsAdmin())
                {
                    <th></th>                 
                }
                @if (KvizZnanja.Models.Authentication.IsAdmin())
                {
                    <th></th>
                }

                @if (KvizZnanja.Models.Authentication.IsAdmin())
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @foreach(var kviz in ViewBag.kvizovi)
            {
                <tr>
                    <td class="text-center" style="width:5%;">@i.</td>
                    <td>@kviz.NazivKviza</td>
                    <td>@kviz.Razina</td>
                    <td class="text-center" style="width:15%;">
                        <button class="btn btn-success" onclick="location.href='@Url.Action("StartKviz", "Kviz", new { ID = kviz.ID}, null)'"><i class="glyphicon glyphicon-play"></i>&nbsp;&nbsp;Započni kviz</button>
                    </td>

                    @if (KvizZnanja.Models.Authentication.IsAdmin())
                    {
                        <td class="text-center" style="width:15%;">
                            <button class="btn btn-info" onclick="location.href='@Url.Action("UrediPitanja", "Kviz", new { ID = kviz.ID }, null)'"><i class="glyphicon glyphicon-edit"></i>&nbsp;&nbsp;Uredi</button>
                        </td>
                    }
                    @if (KvizZnanja.Models.Authentication.IsAdmin())
                    {
                        <td class="text-center" style="width:15%;">
                            <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Kviz", new { ID = kviz.ID }, null)'"><i class="glyphicon glyphicon-trash"></i>&nbsp;&nbsp;Briši</button>
                        </td>
                    }
                    <!--
                    <td class="text-center" style="width:15%;">
                        <button class="btn btn-info" onclick="location.href='@Url.Action("UrediPitanja", "Kviz", new { ID = kviz.ID }, null)'"><i class="glyphicon glyphicon-edit"></i>&nbsp;&nbsp;Uredi</button>
                    </td>
                    <td class="text-center" style="width:15%;">
                        <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Kviz", new { ID = kviz.ID }, null)'"><i class="glyphicon glyphicon-trash"></i>&nbsp;&nbsp;Briši</button>
                    </td>
                    -->
                </tr>
                i++;
            }
        </tbody>
    </table>
}
else{
    <br />
    <h3 style="color: blue">Nema unesenih kvizova!</h3>
}

@if (KvizZnanja.Models.Authentication.IsAdmin())
{
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Kviz")'"><i class="glyphicon glyphicon-plus"></i>&nbsp;&nbsp;Dodaj novi kviz</button>
}